#include<stdio.h>
void CountEvenOdd(int a[],int n){
	int even=0;
	int odd=0;
	for(int i=0;i<n;i++){
		if(a[i]%2==0){
			even+=1;
		}
		else{
			odd+=1;
		}
	}
	printf("Number of even numbers:%d\n",even);
	printf("Number of odd numbers:%d\n",odd);
}
main(){
	int n;
	printf("Enter length of array:");
	scanf("%d",&n);
	int arr[n];
	for(int i=0;i<n;i++){
		printf("Enter %d element:",i+1);
		scanf("%d",&arr[i]);
	}
	CountEvenOdd(arr,n);
}
